{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Dev",
			"dependsOn": ["npm: dev", "npm: typecheck", "npm: test"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "npm",
			"script": "dev",
			"label": "npm: dev",
			"detail": "start development",
			"isBackground": true,
			"presentation": {
				"group": "run-all-group",
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": {
				"owner": "vite",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "\\[(ERROR|WARNING|INFO)\\]\\s([^\\s].*)\\((\\d+),(\\d+)\\):\\s(.*)",
					"file": 2,
					"line": 3,
					"column": 4,
					"severity": 1,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Executing task:.*",
					"endsPattern": ".*VITE v\\d+\\.\\d+\\.\\d+  ready\\.*"
				}
			}
		},
		{
			"type": "npm",
			"script": "typecheck",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"label": "npm: typecheck",
			"detail": "typecheck project",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"group": "run-all-group",
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "npm",
			"script": "test",
			"label": "npm: test",
			"detail": "run tests",
			"group": {
				"isDefault": false,
				"kind": "build"
			},
			"isBackground": true,
			"presentation": {
				"group": "run-all-group",
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": {
				"owner": "vitest",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "\\[(ERROR|WARNING|INFO)\\]\\s([^\\s].*)\\((\\d+),(\\d+)\\):\\s(.*)",
					"file": 2,
					"line": 3,
					"column": 4,
					"severity": 1,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Executing task:.*",
					"endsPattern": ".*Waiting for file changes.*"
				}
			}
		},
		{
			"type": "npm",
			"script": "preview",
			"problemMatcher": [],
			"label": "npm: preview",
			"detail": "preview release build",
			"group": "build"
		},
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": [],
			"label": "npm: build",
			"group": "build"
		},
		{
			"type": "npm",
			"script": "lint",
			"label": "lint",
			"group": "test"
		},
		{
			"type": "npm",
			"script": "lintFix",
			"label": "lint fix",
			"detail": "apply safe linting fixes",
			"group": "test"
		}
	]
}
